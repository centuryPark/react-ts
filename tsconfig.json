{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入， import React from 'react'
    "allowUnusedLabels": true,
    "alwaysStrict": true, // js严格模式
    "inlineSources": true,
    "allowJs": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true, // 不是函数的所有返回路径都有返回值时报错。
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "lib", "es"]
}
